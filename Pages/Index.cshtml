@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Chào mừng đến với Plantpedia</h1>
    <p class="lead">Hệ thống quản lý thông tin thực vật</p>
    
    <div class="mt-5">
        <h3>Tính năng chính</h3>
        <div class="row mt-3">
            <div class="col-md-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Quản lý thực vật</h5>
                        <p class="card-text">Lưu trữ và quản lý thông tin chi tiết về các loài thực vật.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Phân loại khoa học</h5>
                        <p class="card-text">Hệ thống phân loại theo họ, bộ, lớp và loài thực vật.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Tìm kiếm thông minh</h5>
                        <p class="card-text">Tìm kiếm nhanh chóng theo tên, đặc điểm và môi trường sống.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
