@page "/admin"
@model MyRazorApp.Pages.AdminModel
@{
    ViewData["Title"] = "Admin Panel";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <h2>Admin Panel</h2>
            <p class="text-muted">Quản lý hệ thống Plantpedia</p>
        </div>
    </div>

    @if (Model.IsAuthenticated && Model.CurrentUser != null)
    {
        <div class="row">
            <div class="col-md-4">
                <div class="card">
                    <div class="card-header">
                        <h5>Thông tin Admin</h5>
                    </div>
                    <div class="card-body">
                        <p><strong>User ID:</strong> @Model.CurrentUser.UserId</p>
                        <p><strong>Username:</strong> @Model.Username</p>
                        <p><strong>Họ tên:</strong> @Model.CurrentUser.LastName</p>
                        <p><strong>Giới tính:</strong> @Model.CurrentUser.Gender</p>
                        <p><strong>Ngày sinh:</strong> @Model.CurrentUser.DateOfBirth.ToString("dd/MM/yyyy")</p>
                        @if (!string.IsNullOrEmpty(Model.CurrentUser.AvatarUrl))
                        {
                            <p><strong>Avatar:</strong> <img src="@Model.CurrentUser.AvatarUrl" alt="Avatar" class="img-thumbnail" style="width: 50px; height: 50px;"></p>
                        }
                    </div>
                </div>
            </div>

            <div class="col-md-8">
                <div class="card">
                    <div class="card-header">
                        <h5>Chức năng Admin</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <div class="card border-primary">
                                    <div class="card-body text-center">
                                        <h6 class="card-title">Quản lý Thực vật</h6>
                                        <p class="card-text">Thêm, sửa, xóa thông tin thực vật</p>
                                        <a href="#" class="btn btn-primary btn-sm">Quản lý</a>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <div class="card border-success">
                                    <div class="card-body text-center">
                                        <h6 class="card-title">Quản lý User</h6>
                                        <p class="card-text">Quản lý tài khoản người dùng</p>
                                        <a href="#" class="btn btn-success btn-sm">Quản lý</a>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <div class="card border-info">
                                    <div class="card-body text-center">
                                        <h6 class="card-title">Báo cáo</h6>
                                        <p class="card-text">Xem báo cáo thống kê hệ thống</p>
                                        <a href="#" class="btn btn-info btn-sm">Xem báo cáo</a>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <div class="card border-warning">
                                    <div class="card-body text-center">
                                        <h6 class="card-title">Cài đặt</h6>
                                        <p class="card-text">Cấu hình hệ thống</p>
                                        <a href="#" class="btn btn-warning btn-sm">Cài đặt</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row mt-4">
            <div class="col-12">
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5>Thông tin JWT</h5>
                        <div>
                            <a href="/Admin/Dashboard" class="btn btn-outline-primary btn-sm">Dashboard</a>
                            <a href="/Auth/Logout" class="btn btn-outline-danger btn-sm">Logout</a>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <p><strong>Authentication Status:</strong> 
                                    <span class="badge bg-success">Đã đăng nhập</span>
                                </p>
                                <p><strong>User ID từ JWT:</strong> @Model.CurrentUser?.UserId</p>
                                <p><strong>Username từ JWT:</strong> @Model.Username</p>
                            </div>
                            <div class="col-md-6">
                                <p><strong>JWT Token:</strong></p>
                                <div class="bg-light p-2 rounded text-break" style="font-size: 0.8em;">
                                    @if (!string.IsNullOrEmpty(Model.JwtToken))
                                    {
                                        @Model.JwtToken
                                    }
                                    else
                                    {
                                        <span class="text-muted">Không tìm thấy token</span>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-warning">
            <h4>Chưa đăng nhập!</h4>
            <p>Bạn cần đăng nhập để truy cập trang Admin.</p>
            <a href="/Auth/Login" class="btn btn-primary">Đăng nhập</a>
        </div>
    }
</div>