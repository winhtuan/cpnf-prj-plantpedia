@page
@model Plantpedia.Pages.Admin.DashboardModel
@{
    Layout = null;
    ViewData["Title"] = "Admin Dashboard";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Plantpedia</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-12">
                <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
                    <div class="container-fluid">
                        <a class="navbar-brand" href="#">Plantpedia Admin</a>
                        <div class="navbar-nav ms-auto">
                            <span class="navbar-text me-3">
                                Xin chào, @Model.Username!
                            </span>
                            <a class="nav-link" href="/Auth/Logout">Đăng xuất</a>
                        </div>
                    </div>
                </nav>
            </div>
        </div>

        <div class="row mt-4">
            <div class="col-12">
                <h2>Admin Dashboard</h2>
                <p>Chào mừng bạn đến với trang quản trị Plantpedia!</p>
                
                @if (Model.CurrentUser != null)
                {
                    <div class="card">
                        <div class="card-header">
                            <h5>Thông tin tài khoản</h5>
                        </div>
                        <div class="card-body">
                            <p><strong>Họ tên:</strong> @Model.CurrentUser.LastName</p>
                            <p><strong>Giới tính:</strong> @(Model.CurrentUser.Gender == 'M' ? "Nam" : "Nữ")</p>
                            <p><strong>Ngày sinh:</strong> @Model.CurrentUser.DateOfBirth.ToString("dd/MM/yyyy")</p>
                            @if (!string.IsNullOrEmpty(Model.CurrentUser.AvatarUrl))
                            {
                                <p><strong>Avatar:</strong> <img src="@Model.CurrentUser.AvatarUrl" alt="Avatar" class="img-thumbnail" style="width: 50px; height: 50px;" /></p>
                            }
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>